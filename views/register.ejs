<title>Signup Form</title>
<link rel="stylesheet" href="bootstrap/css/bootstrap.rtl.css" />
<link rel="stylesheet" type="text/css" href="styles/style.css" />

<div dir="rtl">
  <br />
  <br />
  <br />
  <div class="container">
    <div class="row-md-3">
      <!-- <div class="col-md-3"></div> -->
      <div class="col-md-5 main">
        <form action="/register" method="post">
          <h1>ثبت نام</h1>

          <input
            class="box"
            type="text"
            name="firstName"
            id="firstName"
            placeholder="نام "
            required
          /><br />

          <input
            class="box"
            type="text"
            name="lastName"
            id="lastName"
            placeholder="نام خانوادگی"
            required
          /><br />

          <input
            class="box"
            type="name"
            name="fatherName"
            id="fatherName"
            placeholder="نام صادق  "
            required
          /><br />

          <input
            class="box"
            type="text"
            name="codeMeli"
            id="codeMeli"
            placeholder="کد ملی"
            required
          /><br />

          <input
            class="box"
            type="password"
            name="password"
            id="password"
            placeholder="رمز عبور  "
            required
          /><br />

          <input
            class="box"
            type="text"
            name="cellphone"
            id="cellphone"
            placeholder="شماره تلفن همراه"
            required
          /><br />

          <input
            class="box"
            type="text"
            name="telephone"
            id="telephone"
            placeholder="شماره تلفن ثابت "
            required
          /><br />
          <br />

          <input
            type="submit"
            id="submitDetails"
            name="submitDetails"
            value="ثبت نام"
          /><br />
        </form>
      </div>

      <div class="col-md-3"></div>
    </div>
  </div>

  <script src="bootstrap/js/bootstrap.bundle.min.js"></script>
</div>
